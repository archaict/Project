#-------------------------- aliases --------------------------#
                                                       #alias  

    alias aliases='vim ~/.bash_aliases'

#-------------------------- scripts --------------------------#
                                                       #alias  

    alias ex='~/shell/ex'
    alias pk='~/shell/pk'
    alias pash='~/shell/pash'
    alias lines='~/shell/lines'
    alias backup='~/shell/backup'

    alias juno='sudo jupyter-notebook --allow-root'

#------------------------ directories ------------------------#
                                                       #alias  

    alias code='cd ~/code/'
    alias cfg='cd ~/.config/'
    alias dl='cd ~/downloads/' 
    alias dl='cd ~/downloads/'                                      
    alias shell='cd ~/shell/'
    alias arci='cd ~/archaict'

    alias vrc='vim ~/.vimrc'
    alias xr='vim ~/.Xresources'
    alias xrs='xrdb ~/.Xresources'
    alias ico='vim ~/.config/i3/config'
    alias qco='vim ~/.config/qtile/config.py'
    alias vsx='vim ~/.config/sxhkd/sxhkdrc'
    alias vcom='vim ~/.config/compton.conf'
    alias vrmcache='rm -rf ~/.cache/vim/swap/'

    alias grep='grep --color=auto'
    alias ls='ls --color=auto --group-directories-first'
    alias lt='ls --human-readable --size -1 -S --classify'
    alias la='ls -a --color=auto --group-directories-first'

#-------------------------- pacmans --------------------------#
                                                       #alias  

    alias pacman='pacman --color=always'
    alias u='sudo pacman -Syu'
    alias i='sudo pacman -S'
    alias yi='yay -s'
    alias del='sudo pacman -Rs'
    alias clean='sudo pacman -S'
    alias deepclean='sudo pacman -Scc'

#--------------------------- miscs ---------------------------#
                                                       #alias  
    alias v='vim'
    alias em='emacs -nw'
    alias sv='sudo -E vim'
    alias rm='rm --preserve-root'
    alias sudo='sudo '
    alias rmd='sudo rm -R'
    alias df='df -h'
    alias du='du -hs * | sort -h'
    alias sx='sxhkd &'
    alias ksx='pkill -x sxhkd'

    alias mv='mv -iv'
    alias cp='cp -iv'
    alias ln='ln -iv'
    
    alias cl='clear'
    alias q='exit'
    alias bye='shutdown -h now'

    alias fping='ping -c 10 -s .2'                                
                                                             
